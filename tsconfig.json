{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,  // Required by TypeORM
    "experimentalDecorators": true,  // Required by TypeORM
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
